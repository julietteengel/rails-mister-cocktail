<div class="container">

  <h2><%= @cocktail.name %></h2>

  <h3>Doses:</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %>
        <%= link_to "Delete a dose",
        cocktail_dose_path(@cocktail, dose), method: :delete %>
    </li>

    <% end %>
  </ul>

  <h2 class="text-center">Add a new dose to this cocktail :</h2>

  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <%= render 'doses/form' %>
      </div>
    </div>




  </div>

  <%= link_to "Back", cocktails_path, class: "btn btn-primary" %>

</div>
