<div class="container">
  <div class="row">

    <div class='col-xs-6 col-xs-offset-3'><h2 class="text-center"><%= @cocktail.name %></h2></div>

    <div class='col-xs-6 col-xs-offset-3 doses-photo'>

    <div class="row">
    <div class='col-xs-6'>
      <h3>Doses:</h3>

      <% @cocktail.doses.each do |dose| %>
        <ul class='description'>
          <li>
            <%= dose.description %> - <%= dose.ingredient.name %><br />
            <%= link_to "Delete a dose",
            cocktail_dose_path(@cocktail, dose), method: :delete %>
          </li>
        </ul>
        <% end %>
        </div>
        <div class='col-xs-6'>
        <div class="cocktail-photo">
          <% if @cocktail.photo? %>
            <%= cl_image_tag @cocktail.photo.path, class:"img-circle", width: 200, height: 200, crop: :fill %>
          <% else %>

            <div class = "form-group">
              <%= simple_form_for @cocktail do |f| %>
                <%= f.input :photo, as: :attachinary %>
                <%= f.submit %>
              <% end %>
            </div>

        </div>
        </div>

      <% end %>

    </div>
    </div>


    <div class='col-xs-6 col-xs-offset-3'>
      <h3 class="text-center">Add a new dose to this cocktail :</h3>
    </div>


    <div class="col-xs-6 col-xs-offset-3">
      <%= render 'doses/form' %>
    </div>





<div class="col-xs-6 col-xs-offset-3">
<%= link_to "Back", cocktails_path, class: "btn btn-primary btn-back" %>
</div>

